<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
  <title>
    <%= title %>
  </title>
</head>

<body>
  <div class="container">
    <%- include('./templates/navBar', { isIndex: false, isSaved: true }) %>

  </div>
  <div class="container">
    <div class="row">
      <% if (data.length > 0) { %>
        <% data.forEach((item) => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 custom-card">
            <div class="card-rotate">
              <div class="card m-3">
                <img src="<%= item.flags %>" class="card-img-top img-fluid" alt="Country Flag">
                <div class="card-back">
                  <img src="<%= item.coatOfArms %>" class="card-img-top img-fluid" alt="Coat of Arms">
                </div>
              </div>
              <div class="card-body">
                <h5 class="card-title">
                  <%= item.nameCommon %>
                </h5>
                <p class="card-text truncated-text">
                  <%= item.alt %>
                </p>
                <a class="read-more">See More</a>
                <a class="read-less">See Less</a>
              </div>
              <form method="POST" action="/deleteCountry">
                <input type="hidden" name="_id" value="<%= item._id %>">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-md-12">
          <h3>No Countries Saved</h3>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="script.js"></script>
</body>

</html>
