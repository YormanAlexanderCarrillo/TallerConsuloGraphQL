<%- include('./templates/header')%>

<body>
  <div class="container">
    <%- include('./templates/navBar', { isIndex: false, isSaved: true }) %>
  </div>

  <div class="container">
    <div class="row">
      <% if (data) { %>
        <% if (data.length > 0) { %>
          <% data.forEach((item) => { %>
            <div class="col-lg-3 col-md-4 col-sm-6 custom-card">
              <div class="card-rotate">
                <div class="card m-3">
                  <img src="<%= item.flags %>" class="card-img-top img-fluid" alt="Country Flag">
                  <div class="card-back">
                    <img src="<%= item.coatOfArms %>" class="card-img-top img-fluid" alt="Coat of Arms">
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= item.nameCommon %>
                  </h5>
                  <p class="card-text truncated-text">
                    <%= item.alt %>
                  </p>

                  <a class="read-more">See More</a>
                  <a class="read-less">See Less</a>
                </div>

                <div class="d-flex justify-content-between">
                  <form method="POST" action="/deleteCountry">
                    <input type="hidden" name="_id" value="<%= item._id %>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>

                  <form method="POST" action="/modCountry">
                    <input type="hidden" name="id" value="<%= item._id %>">
                    <button type="submit" class="btn btn-warning float-end">Modify</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-md-12">
            <h3>No Countries Saved</h3>
          </div>
        <% } %>
      <% } else { %>
        <%- include('./Error') %>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="script.js"></script>
</body>
</html>
