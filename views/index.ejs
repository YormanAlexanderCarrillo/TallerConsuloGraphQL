<%- include('./templates/header')%>

  <body>
    <div class="container">
      <%- include('./templates/navBar', { isIndex: true, isSaved: false }) %>
    </div>

    <div class="container">
      <div class="row">
        <%if(data){%>
          <% if (data.length> 0) { %>
            <% data.forEach((item)=> { %>
              <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card-rotate border mb-4">
                  <div class="card">
                    <img src="<%= item.flags %>" class="card-img-top img-fluid" alt="Country Flag">
                    <div class="card-back">
                      <img src="<%= item.coatOfArms %>" class="card-img-top img-fluid" alt="Coat of Arms">
                    </div>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= item.nameCommon %>
                    </h5>
                    <p class="card-text truncated-text">
                      <%= item.alt %>
                    </p>

                    <form method="POST" action="/saved">
                      <input type="hidden" name="nameCommon" value="<%= item.nameCommon %>">
                      <input type="hidden" name="nameOfficial" value="<%= item.nameOfficial %>">
                      <input type="hidden" name="independent" value="<%= item.independent %>">
                      <input type="hidden" name="capital" value="<%= item.capital %>">
                      <input type="hidden" name="region" value="<%= item.region %>">
                      <input type="hidden" name="coatOfArms" value="<%= item.coatOfArms %>">
                      <input type="hidden" name="flags" value="<%= item.flags %>">
                      <input type="hidden" name="alt" value="<%= item.alt %>">
                      <button type="submit" class="btn btn-primary">Save Country</button>
                    </form>
                  </div>
                </div>
              </div>
              <% }) %>
                <% } else { %>
                  <div class="col-md-12">
                    <h3>No hay datos</h3>
                  </div>
                <% } %>
      <%}else{%>
        <%- include('./Error') %>
      <%}%>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"></script>
    <script src="script.js"></script>
  </body>

  </html>